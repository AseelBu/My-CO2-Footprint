<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".LeaderboardAndPointsActivity">

    <TextView
        android:id="@+id/leaderboardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/leaderboard"
        android:textAlignment="center"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/headSize" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.androidcourse.energyconsumptiondiary_androidapp.PointsFragment"
        class="com.androidcourse.energyconsumptiondiary_androidapp.PointsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <fragment
            android:id="@+id/fragment"
            android:name="com.androidcourse.energyconsumptiondiary_androidapp.LeaderboardFragment"
            class="com.androidcourse.energyconsumptiondiary_androidapp.LeaderboardFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</LinearLayout>