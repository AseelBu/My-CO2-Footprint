<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".LeaderboardAndPointsActivity">

    <TextView
        android:id="@+id/leaderboardAndPointsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/leaderboard"
        android:textAlignment="center"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/headSize" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.androidcourse.energyconsumptiondiary_androidapp.PointsFragment"
        class="com.androidcourse.energyconsumptiondiary_androidapp.PointsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leaderboardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/leaderboardTitle"
                android:textAlignment="center"
                android:textColor="@color/darkGreen"
                android:textSize="@dimen/headSize"
                android:textStyle="bold" />

            <fragment
                android:id="@+id/fragment"
                android:name="com.androidcourse.energyconsumptiondiary_androidapp.LeaderboardFragment"
                class="com.androidcourse.energyconsumptiondiary_androidapp.LeaderboardFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>